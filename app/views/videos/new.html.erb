<div class="container">
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well well-sm">
          <%= form_for @video, class: "form-horizontal" do |f| %>
          <fieldset>
            <legend class="text-center">Upload Video</legend>
            <!-- Name input-->
            <div class="form-group">
              <label class="col-md-3 control-label" for="title">Title</label>
              <div class="col-md-9">
                <%= f.text_field :title, :class=> "form-control", id: "title", :required => true, placeholder: "Enter Title" %>
              </div>
            </div>
            <!-- Email input-->
            <div class="form-group">
              <label class="col-md-3 control-label" for="description">Description</label>
              <div class="col-md-9">
                <%= f.text_area :description, :class=> "form-control", id: "description", :required => true, placeholder: "Enter Description" %>
              </div>
            </div>
            <!-- Message body -->
            <div class="form-group">
              <label class="col-md-3 control-label" for="video">Upload Video</label>
              <div class="col-md-9">
                <%= f.file_field :video, :class=> "form-control", id: "video" %>
              </div>
            </div>
            <!-- Form actions -->
            <div class="clearfix"></div>
          </br>
            <div class="form-group">
              <div class="col-md-12 text-right">
                 <%= f.submit :class=> "btn btn-primary" %>
              </div>
            </div>
          </fieldset>
          <% end %>
        </div>
      </div>
  </div>
</div>
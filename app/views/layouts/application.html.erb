<!DOCTYPE html>
<html>
  <head>
    <title>VideoUploadTool</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<%= nav_bar fixed: :top, brand: "VideoUploadTool" do %>
	    <%= menu_group pull: :right do %>
      <%= menu_item "Home", root_path %>
	    <% if current_user %>
        <%= menu_item "Upload Video", new_video_path %>
	      <%= menu_item "Log Out", destroy_user_session_path, method: :delete %>
	    <% else %>
       
          <%= menu_item "Sign Up", new_user_registration_path %>
          <%= menu_item "Sign In", new_user_session_path %>
        
    	<% end %>
      <% end %>
    <% end %>
    <div class="clearfix"></div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
